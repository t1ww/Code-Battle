{
  "name": "code-battle",
  "version": "1.0.0",
  "private": true,
  "description": "CAMT SE65 `senior project` for my group",
  "main": "index.js",
  "workspaces": [
    "backend",
    "frontend/code-battle",
    "ts-code-runner",
    "socket-server"
  ],
  "type": "module",
  "scripts": {
    "jwt": "node util_scripts/jwt.generator.js --prefix utility",
    "team-bot": "nodemon --watch util_scripts/teamJoinBot.ts --exec \"node --loader ts-node/esm teamJoinBot.ts\"",
    "kill-ports": "node util_scripts/kill-ports.config.js",
    "fe": "npm run dev --prefix frontend/code-battle",
    "frontend": "npm run fe",
    "be": "npm run dev --prefix backend",
    "be:db:reset": "npm run database:reset --prefix backend",
    "be:db:seed": "npm run database:seed --prefix backend",
    "be:db:migrate": "npx knex migrate:latest --knexfile knexfile.ts --cwd backend",
    "be:db:rollback": "npx knex migrate:rollback --all --knexfile knexfile.ts --cwd backend",
    "be:test": "npm test --prefix backend",
    "backend": "npm run be",
    "backend:database:reset": "npm run be:db:reset",
    "backend:database:seed": "npm run be:db:seed",
    "backend:test": "npm run be:test",
    "tcr": "npm run dev --prefix ts-code-runner",
    "ts-code-runner": "npm run tcr",
    "ss": "npm run dev --prefix socket-server",
    "socket-server": "npm run ss",
    "dev": "npm run kill-ports && concurrently -n BE,FE,TCR,SS -c cyan,green,yellow,magenta \"npm run be\" \"npm run fe\" \"npm run tcr\" \"npm run ss\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t1ww/Code-Battle.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/t1ww/Code-Battle/issues"
  },
  "homepage": "https://github.com/t1ww/Code-Battle#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "chalk": "^5.6.0",
    "concurrently": "^9.2.0",
    "detect-port": "^2.1.0",
    "jest": "^30.0.4",
    "kill-port": "^2.0.1",
    "mock-req-res": "^1.2.1",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "monaco-editor": "^0.52.2",
    "monaco-editor-vue3": "^0.1.10"
  }
}